{
  "name": "herbs-tests",
  "version": "1.0.0",
  "description": "Тесты для сайта Herbs с Allure отчетами",
  "main": "index.js",
  "scripts": {
    "test": "herbs-tests/node_modules/.bin/playwright test --headed",
    "test:headed": "herbs-tests/node_modules/.bin/playwright test --headed",
    "test:headless": "herbs-tests/node_modules/.bin/playwright test",
    "test:debug": "herbs-tests/node_modules/.bin/playwright test --headed --debug",
    "test:e2e": "herbs-tests/node_modules/.bin/playwright test tests/e2e --headed",
    "test:smoke": "herbs-tests/node_modules/.bin/playwright test tests/smoke-tests.spec.js --headed",
    "allure:generate": "herbs-tests/node_modules/.bin/allure generate allure-results --clean -o allure-report",
    "allure:open": "herbs-tests/node_modules/.bin/allure open allure-report",
    "allure:serve": "herbs-tests/node_modules/.bin/allure serve allure-results",
    "allure:clear": "rm -rf herbs-tests/allure-results allure-report",
    "report:full": "npm run test:headed && npm run allure:generate && npm run allure:open",
    "install:browsers": "npx playwright install chromium",
    "codegen": "npx playwright codegen https://herb.tproject.su/web/"
  },
  "keywords": [
    "playwright",
    "testing",
    "allure",
    "e2e"
  ],
  "author": "QA Engineer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^2.10.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
