{
  "name": "herbs-tests",
  "version": "1.0.0",
  "description": "Тесты для сайта Herbs с Allure отчетами",
  "main": "index.js",
  "scripts": {
    "test": "playwright test --headed",
    "test:headed": "playwright test --headed",
    "test:headless": "playwright test",
    "test:debug": "playwright test --headed --debug",
    "test:e2e": "playwright test tests/e2e --headed",
    "test:smoke": "playwright test tests/smoke-tests.spec.js --headed",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:clear": "rm -rf allure-results allure-report",
    "report:full": "npm run test:headed && npm run allure:generate && npm run allure:open",
    "install:browsers": "npx playwright install chromium",
    "codegen": "npx playwright codegen https://herb.tproject.su/web/"
  },
  "keywords": [
    "playwright",
    "testing",
    "allure",
    "e2e"
  ],
  "author": "QA Engineer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^2.10.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
